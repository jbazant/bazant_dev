---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
dynamicPermalink: false
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {%- for page in collections.all %}
    {%- if page.url %}
      {%- set absoluteUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
      {%- set ps %}{{ page.data.sitemap or {} }}{% endset %}
      {%- set lastmod %}{{ ps.lastmod or (page.inputPath | stat('mtime')) }}{% endset %}
  <url>
    <loc>{{ absoluteUrl }}</loc>
    <lastmod>{{ lastmod }}</lastmod>
    <changefreq>{{ ps.changeFrequency or sitemap.defaultChangeFrequency }}</changefreq>
    <priority>{{ ps.priority or sitemap.defaultPriority }}</priority>
  </url>
    {%- endif %}
  {%- endfor %}
</urlset>
