{
  "name": "bazant.dev",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf ./_site",
    "test": "jest",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts'",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "build:webpack": "webpack --mode production",
    "build:sass": "sass --style=compressed src/css/main.scss _site/css/main.css --no-source-map --stop-on-error",
    "build": "npm-run-all clean --parallel build:*",
    "serve:eleventy": "ELEVENTY_ENV=development eleventy --serve",
    "serve:webpack": "webpack --mode development  --devtool source-map --watch",
    "serve:sass": "sass --style=compressed src/css/main.scss _site/css/main.css --source-map --watch --no-stop-on-error",
    "serve": "npm-run-all clean --parallel serve:*",
    "debug": "DEBUG=* eleventy",
    "php:server": "php -S localhost:8000 -t '_site/'",
    "postinstall": "husky install"
  },
  "author": "Jiri Bazant (j.bazant@gmail.com)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@types/gtag.js": "^0.0.6",
    "@types/jest": "^27.0.1",
    "@types/service-worker-mock": "^2.0.1",
    "@types/stats.js": "^0.17.0",
    "@types/three": "^0.103.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "luxon": "^1.27.0",
    "markdown-it": "^12.0.6",
    "nock": "^13.1.3",
    "node-fetch": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "sass": "^1.43.3",
    "service-worker-mock": "^2.0.5",
    "stats.js": "^0.17.0",
    "terser-webpack-plugin": "^5.1.3",
    "three": "^0.117.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.3",
    "ts-shader-loader": "^1.0.6",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix"
    ],
    "**/*.+(js|ts|json|css)": [
      "prettier --write"
    ]
  }
}
